{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "../Nozomi",
    "types": [
      "webpack-env",
      "jest"
    ],
    "paths": {
      "@/*": [
        "src/main/client/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/main/client/**/*.ts",
    "src/main/client/**/*.tsx",
    "src/main/client/**/*.vue",
    "test/main/client/**/*.ts",
    "test/main/client/**/*.tsx"
  ],
  "exclude": [
    "../Nozomi/node_modules"
  ]
}
